<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" 
    xmlns:beans="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    <!-- HTTP security configurations -->
    <http auto-config="true" use-expressions="true">
        <form-login login-processing-url="/resources/j_spring_security_check" login-page="/site/login" authentication-failure-url="/site/login?login_error=t" />
        <logout logout-url="/resources/j_spring_security_logout" />
        <intercept-url pattern="/site/login" access="permitAll" />
        <intercept-url pattern="/tweeter/new" access="permitAll" />
        <intercept-url pattern="/site/**" access="isAuthenticated()" />
        <intercept-url pattern="/tweeter/**" access="isAuthenticated()" />
        <intercept-url pattern="/tweet/**" access="isAuthenticated()" />
        <intercept-url pattern="/resources/**" access="permitAll" />
        <intercept-url pattern="/**" access="permitAll" />
    </http>
    <!-- Configure Authentication mechanism -->
    <authentication-manager alias="authenticationManager">
        <authentication-provider>
            <password-encoder hash="sha-256" />
            <jdbc-user-service data-source-ref="dataSource"
            users-by-username-query="SELECT U.username as username, U.password as password, U.enabled as enabled FROM tweeter U where U.username=?"
            authorities-by-username-query="SELECT U.username as username, U.authority as authority FROM tweeter U WHERE LOWER(U.username)=?" />
        </authentication-provider>
    </authentication-manager>
</beans:beans>
